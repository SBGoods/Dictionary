<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View" />
        <import type="android.widget.EditText" />
        <variable name="search" type="String" />
        <variable
            name="viewmodel"
            type="com.goods.android.dictionary.viewmodel.MainViewModel" />


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.SearchFragment">


        <EditText
            android:id="@+id/search_bar"
            android:text="@={viewmodel.searchQuery}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

        <Button
            android:id="@+id/search_button"
            android:text="@{search}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@{search}"
            app:layout_constraintTop_toBottomOf="@id/search_bar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:onClick="@{viewmodel::searchButtonClick}"
            />

<!--        <TextView-->
<!--            android:id="@+id/word_view"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            app:layout_constraintTop_toBottomOf="@id/search_button"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            android:text="@{viewmodel.mediatorLiveData.word}"-->
<!--            tools:text="example"-->
<!--            />-->


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
